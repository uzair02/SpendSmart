@{
    ViewData["Title"] = "Expenses";
}
@model List<Expense>

<div class="container">
    <div class="text-center mb-4">
        <h1 class="display-4">Expenses</h1>
        <hr>
        <h3>Total Expenses: Rs.@ViewBag.Expenses</h3>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Value</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.Id</td>
                        <td>@expense.Value</td>
                        <td>@expense.Description</td>
                        <td>
                            <a class="btn btn-outline-secondary btn-sm" asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        .container {
            margin-top: 30px;
        }

        .display-4 {
            color: #343a40;
        }

        .thead-dark th {
            background-color: #343a40;
            color: #fff;
        }

        .table {
            margin-top: 20px;
        }

        .btn-outline-secondary {
            margin-right: 10px;
        }

        .btn-outline-danger {
            margin-left: 10px;
        }

        .table-responsive {
            overflow-x: auto;
        }
    </style>
}
